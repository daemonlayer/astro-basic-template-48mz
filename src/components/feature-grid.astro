---
import { Picture, Image } from "astro:assets";
import Card from "@components/card.astro";
import IntegrationImg from "../assets/integrations.svg?url";
import FeatureDashboard from "../assets/features/feature-dashboard.png";
import FeatureAuditTrail from "../assets/features/audit-trail.png";
import FeatureReasoning from "../assets/features/ai-reasoning.png";
import FeatureIntake from "../assets/features/Intake.jpg";
---

<div class="mt-24">
  <h2 class="text-4xl lg:text-5xl lg:tracking-tight">
    Everything you need to <span class="text-brand">automate support</span>
  </h2>
  <p class="text-lg mt-4 text-slate-600">
    DaemonLayer connects with your PSA, RMM, and Microsoft 365 to intelligently automate ticket handling, triage, and user support — all within your existing workflows.  </p>
</div>

<div class="grid md:grid-cols-2 lg:grid-cols-5 mt-16 gap-10">
  <Card class="lg:col-span-3" color="purple">
    <Fragment slot="image">
      <Picture
        src={FeatureDashboard}
        alt="Feature image"
        formats={["avif", "webp"]}
        class="h-full w-full object-contain"
        loading="lazy"
      />
    </Fragment>
    <span slot="badge">Automation Engine</span>
    <span slot="title">Intelligent Ticket Triage</span>
    <span slot="desc">
      DaemonLayer analyses every incoming request, classifies it instantly, and assigns the right resource — cutting triage time from minutes to seconds.
    </span>
  </Card>
  <Card class="lg:col-span-2" color="indigo">
    <Fragment slot="image">
      <Picture
        src={FeatureIntake}
        alt="Feature image"
        formats={["avif", "webp"]}
        class="h-full w-full object-contain"
        loading="lazy"
      />
    </Fragment>
    <span slot="badge">Smart Intake</span>
    <span slot="title">Unified Inbox Monitoring</span>
    <span slot="desc">
      We monitor your shared mailboxes, filter out spam, forward sales, and triage support requests automatically — no more manual sorting.</span
    >
  </Card>
</div>

<div class="grid md:grid-cols-2 lg:grid-cols-3 mt-10 gap-10">
  <Card color="indigo" size="sm">
    <Fragment slot="image">
      <Picture
        src={FeatureReasoning}
        alt="Feature image"
        formats={["avif", "webp"]}
        class="h-full w-full object-contain"
        loading="lazy"
      />
    </Fragment>
    <span slot="badge">Transparency</span>
    <span slot="title">Full Insight into AI Reasoning</span>
    <span slot="desc">
      See how each decision is made with complete visibility into every AI classification, action, and trigger in real time.</span
    >
  </Card>

  <Card color="purple" size="sm">
    <Fragment slot="image">
      <Picture
        src={FeatureAuditTrail}
        alt="Feature image"
        formats={["avif", "webp"]}
        class="h-full w-full object-contain"
        loading="lazy"
      />
    </Fragment>
    <span slot="badge">Reporting</span>
    <span slot="title">Analytics & Audit Trail</span>
    <span slot="desc">
      Measure impact, track automation success, and maintain full compliance with detailed audit logs per tenant.</span
    >
  </Card>

  <Card size="sm">
    <Fragment slot="image">
      <!-- // svg image. cannot use <picture/> as of now -->
      <Image
        src={IntegrationImg}
        alt="Feature image"
        width="909"
        height="823"
        class="h-full w-full object-contain"
        loading="lazy"
      />
    </Fragment>
    <span slot="badge">Integrations</span>
    <span slot="title">Connected Ecosystem</span>
    <span slot="desc">
      Seamless integrations with Halo, Autotask, Datto RMM, and Microsoft 365. DaemonLayer adapts to your existing tech stack — not the other way around.</span
    >
  </Card>
</div>

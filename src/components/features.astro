---
import Badge from "@components/ui/badge.astro";
import { Icon } from "astro-icon/components";

const features = [
  {
    title: "Autotask Integration",
    description:
      "Active for pilot partners – supports ticket intake, triage, and automated password resets.",
    icon: "fluent:flash-24-regular",
    status: "Ready",
  },
  {
    title: "ConnectWise & Smart Responses",
    description:
      "Next up – ConnectWise integration, intelligent ticket acknowledgement and first-response automation.",
    icon: "fluent:plug-connected-24-regular",
    status: "In Progress",
  },
  {
    title: "Ecosystem Expansion",
    description:
      "Pax8, RMMs, Slack, Teams & more – deeper integration across the full MSP toolset.",
    icon: "fluent:apps-24-regular",
    status: "Planned",
  },
];

---

